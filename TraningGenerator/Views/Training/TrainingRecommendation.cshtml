@model TraningGenerator.Models.PersonTrainingInfo

@{
    ViewData["Title"] = "TrainingRecommendation";
}

<div>
    <h3>Din genererade rutin</h3>
    <p>Hej @Html.DisplayFor(model => model.Name)!</p>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YearOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoursOfTrainingNow)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoursOfTrainingNow)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewTraining)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewTraining)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FavoriteTraining)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FavoriteTraining)
        </dd>
    </dl>

    <form asp-action="TrainingEvaluation">
        <p>Sätt ett betyg på genereringen:</p>
        <div class="form-group">
            <input type="radio" name="Grade" value="1"> Bra <br />
            <input type="radio" name="Grade" value="2"> Sådär <br />
            <input type="radio" name="Grade" value="3"> Dåligt <br />
        </div>
  
        <div class="form-group">
            <input type="submit" value="Betygsätt" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Testa generera igen</a>
</div>
