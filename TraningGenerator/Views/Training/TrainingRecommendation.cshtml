@model TraningGenerator.Models.PersonTrainingInfo

<div>
    <h3>Din genererade rutin</h3>
    <p>Hej @Html.DisplayFor(model => model.Name)!</p>
    <p>Du är @Html.DisplayFor(model => model.Age) år gammal (i år) och tränar @Html.DisplayFor(model => model.HoursOfTrainingNow) timmar i veckan. Wow! <br /> Du gillar 
    @Html.DisplayFor(model => model.FavoriteTraining) men det kan vara bra att bryta gamla vanor... Din nya rutin blir därför:</p>
    <dl class="row">
        <dt class="col-sm-3">
            Träningsform
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewTraining)
        </dd>
        <dt class="col-sm-3">
            Antal timmar i veckan
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoursOfRecommendedTraining)
        </dd>
    </dl>

    <form asp-action="TrainingEvaluation">
        <p>Sätt ett betyg på genereringen:</p>
        <div class="form-group">
            <input type="radio" name="Grade" value="1"> Bra <br />
            <input type="radio" name="Grade" value="2"> Sådär <br />
            <input type="radio" name="Grade" value="3"> Dåligt <br />
        </div>
  
        <div class="form-group">
            <input type="submit" value="Betygsätt" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Testa generera igen</a>
</div>
